{
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Bash(git status*)",
      "Bash(git -C * status*)",
      "Bash(git log*)",
      "Bash(git -C * log*)",
      "Bash(git diff*)",
      "Bash(git -C * diff*)",
      "Bash(git branch*)",
      "Bash(git -C * branch*)",
      "Bash(git remote -v*)",
      "Bash(git -C * remote -v*)",
      "Bash(git show *)",
      "Bash(git -C * show *)",
      "Bash(git blame *)",
      "Bash(git -C * blame *)",
      "Bash(git stash list*)",
      "Bash(git -C * stash list*)",
      "Bash(git add *)",
      "Bash(git -C * add *)",
      "Bash(git commit *)",
      "Bash(git -C * commit *)",
      "Bash(git checkout *)",
      "Bash(git -C * checkout *)",
      "Bash(git checkout -b *)",
      "Bash(git -C * checkout -b *)",
      "Bash(git stash*)",
      "Bash(git -C * stash*)",
      "Bash(git stash pop*)",
      "Bash(git -C * stash pop*)",
      "Bash(git fetch*)",
      "Bash(git -C * fetch*)",
      "Bash(git pull*)",
      "Bash(git -C * pull*)",
      "Bash(git merge *)",
      "Bash(git -C * merge *)",
      "Bash(git rebase *)",
      "Bash(git -C * rebase *)",
      "Bash(ls*)",
      "Bash(pwd*)",
      "Bash(tree *)",
      "Bash(which *)",
      "Bash(npx *)",
      "Bash(npm list*)",
      "Bash(npm outdated*)",
      "Bash(jq *)",
      "Bash(wc *)",
      "Bash(gh issue list*)",
      "Bash(gh issue view *)",
      "Bash(gh issue status*)",
      "Bash(gh pr list*)",
      "Bash(gh pr view *)",
      "Bash(gh pr status*)",
      "Bash(gh pr checks*)",
      "Bash(gh pr diff *)",
      "Bash(gh repo view*)",
      "Bash(gh run list*)",
      "Bash(gh run view *)",
      "Bash(gh release list*)",
      "Bash(gh release view *)",
      "Bash(gh label list*)",
      "Bash(gh auth status*)",
      "Bash(gh api *)",
      "Bash(git config --get *)",
      "Bash(git -C * config --get *)",
      "Bash(git config --list*)",
      "Bash(git -C * config --list*)"
    ],
    "deny": [
      "Bash(git push -f *)",
      "Bash(git -C * push -f *)",
      "Bash(git push --force *)",
      "Bash(git -C * push --force *)",
      "Bash(git reset --hard *)",
      "Bash(git -C * reset --hard *)",
      "Bash(git clean -f *)",
      "Bash(git -C * clean -f *)",
      "Bash(rm -rf *)",
      "Bash(rm -r *)"
    ],
    "ask": [
      "Bash(git push *)",
      "Bash(git -C * push *)",
      "Bash(rm *)",
      "Bash(curl *)",
      "Bash(npm install*)",
      "Bash(npm run *)",
      "Bash(gh issue create*)",
      "Bash(gh issue close*)",
      "Bash(gh issue edit*)",
      "Bash(gh issue comment*)",
      "Bash(gh pr create*)",
      "Bash(gh pr close*)",
      "Bash(gh pr merge*)",
      "Bash(gh pr edit*)",
      "Bash(gh pr comment*)",
      "Bash(gh pr review*)",
      "Bash(gh release create*)",
      "Bash(gh release delete*)",
      "Bash(gh repo create*)",
      "Bash(gh repo delete*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[Hook] File written: $CLAUDE_FILE_PATH\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"$CLAUDE_NOTIFICATION\" with title \"Claude Code\"'"
          }
        ]
      }
    ]
  }
}
